<div class="card">
  <h1><%= @tadpole.name %> the Tadpole</h1>

  <!-- make form to make "Become a frog" button here -->
  <!-- the form should post to /tadpoles/:id/metamorphose -->

  <p>Color: <%= @tadpole.color %></p>
  <p>Parent: <a href="/frogs/<%= @tadpole.frog.id %>"><%= @tadpole.frog.name %></a></p>
  <p>Lives: <a href="/ponds/<%= @tadpole.pond.id %>"><%= @tadpole.pond.name %></a></p>

  <a href="/tadpoles">Back</a> |
  <a href="/tadpoles/<%= @tadpole.id %>/edit">Edit</a> |
  <a href="/tadpoles/<%= @tadpole.id %>/destroy">Delete</a>

  <!-- <input type="submit" name="" value="Become a frog"> -->
  <!-- <%= link_to '<button type="button">Become a frog</button>', metamorphose_path %>  -->
  <!-- <form action="/tadpoles/<%= @tadpole.id %>/metamorphose" method="post">
    <input type="hidden" name="name" value="<%= @tadpole.name %>">
    <input type="hidden" name="color" value="<%= @tadpole.color %>">
    <input type="submit" value="Become a frog" />
  </form> -->

  <%= form_for @tadpole, url: metamorphose_path(@tadpole), method: :post do |f| %>
    <% f.hidden_field :name, value: @tadpole.name %>
    <% f.hidden_field :color, value: @tadpole.color %>
    <%= f.submit "Become a frog"%>
  <% end %>
</div>

<div class="card">
  <img src="http://<%= @tadpole.color %>-tadpole.jpg.to/" alt="Tadpole Picture" width="300">
</div>
